---
interface Props {
  date: Date;
  lang?: 'en' | 'es';
}

const { date, lang = 'en' } = Astro.props as Props;
---

<time datetime={date.toISOString()}>
  {
    date.toLocaleDateString(lang === 'es' ? 'es-ES' : 'en-US', {
      month: 'short',
      day: 'numeric',
      year: 'numeric',
    })
  }
</time>
