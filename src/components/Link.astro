---
import { cn } from '@/lib/utils';

type Props = {
  href: string;
  external?: boolean;
};

const { href, external, ...rest } = Astro.props;
---

<a
  href={href}
  target={external ? '_blank' : '_self'}
  class={cn(
    'inline-block text-current hover:dark:text-white hover:text-black decoration-black/15 hover:dark:decoration-white/50 hover:decoration-black/25 dark:decoration-white/30 transition-colors duration-300 ease-in-out',
  )}
  {...rest}
>
  <slot />
</a>
